<Window
    x:Class="RoomFinishes.Controls.PluginControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Перекрасить смежные"
    Width="380"
    Height="120"
    DataContext="{Binding}"
    IsEnabled="True"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10" Orientation="Vertical">
        <TextBlock
            HorizontalAlignment="Center"
            Text="Будут применены различные оттенки для смежных квартир с одинаковым количеством комнат. Продолжить?"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <StackPanel
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Click="Ok_Button_Click"
                Content="Продолжить"
                IsDefault="True" />
            <Button
                Margin="10,0,0,0"
                Click="Cancel_Button_Click"
                Content="Отмена"
                IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>